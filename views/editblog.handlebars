<div class='d-flex justify-content-center pb-1'>
  <h2>Edit Blog</h2>

</div>

<section class='{{user.blog.id}}' id='editBlog'>
  <div class='editBlogContainer pt-5'>
    <form id='editBlogForm' class='editBlogForm'>
      <div class='form-group'>
        <label for='title' class='h3'>New Blog Title:</label>
        <input
          type='text'
          class='form-control'
          name='title'
          id='editBlogTitle'
        />
      </div>
      <div class='form-group'>
        <label for='body' class='h3'>New Blog Content:</label>
        <textarea class='form-control' id='editBlogBody' rows='6'></textarea>
      </div>
      <button
        href=''
        type='submit'
        id='editSubmit'
        class='btn bg-dark text-white'
      >Submit Edit</button>
    </form>
  </div>
</section>

<script src='/js/editblog.js'></script>