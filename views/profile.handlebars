{{#each userBlogss as |uBlog|}}
  <div class='row mb-4 border border-dark blog'>
    <div class='col-md-5'>
      <h3 class='bg-dark text-white mb-0 p-1'>
        <a class='link-light' href=''>{{uBlog.blog_title}}</a>

      </h3>
      <p class='bg-dark text-white p-1'>Created by
        {{uBlog.user.username}}
        on
        {{format_date uBlog.date_created}}</p>
      <p>{{uBlog.blog_body}}</p>

    </div>
  </div>
{{/each}}

<button type='submit' class='btn'><a class='link-primary' href='/newblog'>Create
    New Blog Post</a></button>