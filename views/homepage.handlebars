<!-- show EVERY blog from ANY user -->
{{#each blogs as |blog| }}
<div class="row mb-4 border border-dark blog ">
  <div class="col-md-5">
    <h3 class="bg-dark text-white mb-0 p-1">
      <a class="link-light" href="/blog/{{blog.id}}">{{blog.blog_title}}</a>
       
    </h3>
    <p class="bg-dark text-white p-1">Created by {{blog.user.username}} on {{format_date blog.date_created}}</p>
    <p>{{blog.blog_body}}</p>
    
  </div>
</div>
{{/each}}
