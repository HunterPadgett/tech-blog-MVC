<!-- Loop over each object in the blogs array -->
{{#each blogs as |blog| }}
<div class="row mb-4 border border-dark blog ">
  <div class="col-md-5">
    <h3 class="bg-dark text-white mb-0 p-1">
      {{blog.blog_title}} 
    </h3>
    <p class="bg-dark text-white p-1">Created by {{blog.user.name}} on {{format_date blog.date_created}}</p>
    <p>{{blog.blog_body}}</p>
    
  </div>
</div>
{{/each}}
